  "bugs": {
    "url": "https://github.com/H4ad/dependency-extractor/issues"
  },
  "homepage": "https://github.com/H4ad/dependency-extractor#readme",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
